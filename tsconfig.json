{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react-native",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": ["node_modules"]
}